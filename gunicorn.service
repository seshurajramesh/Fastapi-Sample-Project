[Unit]
Description=Gunicorn instance to serve Fastapi Sample Project
After=network.target

[Service]
User=fastapi
Group=fastapi
WorkingDirectory=/home/fastapi/app/src
Environment="PATH=/home/fastapi/app/venv/bin"
ExecStart=/home/fastapi/app/venv/bin/gunicorn -w 2 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:8000 main:app
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
